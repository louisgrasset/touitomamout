{
  "name": "touitomamout",
  "version": "1.0.0",
  "description": "Tweets to Toot synchronizer",
  "scripts": {
    "start": "node --no-warnings --no-deprecation ./index.js",
    "lint": "eslint src/ --ext .ts --fix",
    "build": "tsc",
    "predeploy": "npm ci && npm run build",
    "deploy": "pm2 start ./dist/index.js --name touitomamout --no-autorestart --cron '*/7 * * * *'",
    "deploy:update": "pm2 del touitomamout && npm run deploy"
  },
  "type": "module",
  "author": "Louis Grasset",
  "homepage": "https://github.com/louisgrasset/touitomamout",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/louisgrasset/touitomamout.git"
  },
  "dependencies": {
    "@pm2/io": "^5.0.0",
    "cli-spinners": "^2.9.0",
    "dotenv": "^16.1.4",
    "html-escaper": "^3.0.3",
    "masto": "^5.11.3",
    "node-html-parser": "^6.1.5",
    "ora": "^6.3.1"
  },
  "devDependencies": {
    "@types/html-escaper": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "typescript": "^5.1.3"
  }
}
