{
  "name": "touitomamout",
  "version": "1.0.2",
  "description": "An easy way to synchronize your Twitter's tweets to Mastodon & Bluesky posts.",
  "scripts": {
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "build": "tsc",
    "predeploy": "npm ci && npm run build",
    "deploy": "bash ./deployment/deploy.sh",
    "deploy:update": "bash ./deployment/deploy.sh --update",
    "postinstall": "husky install .husky",
    "commitlint": "commitlint --edit"
  },
  "type": "module",
  "author": "Louis Grasset",
  "homepage": "https://github.com/louisgrasset/touitomamout",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/louisgrasset/touitomamout.git"
  },
  "dependencies": {
    "@atproto/api": "^0.6.20",
    "@pm2/io": "^5.0.2",
    "@the-convocation/twitter-scraper": "^0.8.1",
    "@types/node": "^20.8.7",
    "cli-spinners": "^2.9.1",
    "dotenv": "^16.3.1",
    "html-escaper": "^3.0.3",
    "masto": "^6.3.2",
    "mime": "^3.0.0",
    "node-html-parser": "^6.1.10",
    "ora": "^7.0.1",
    "tough-cookie": "^4.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@types/html-escaper": "^3.0.1",
    "@types/mime": "^3.0.3",
    "@types/tough-cookie": "^4.0.4",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.52.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "typescript": "^5.2.2"
  }
}
